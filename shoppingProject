import java.util.*;

class CommercePrototype {
    public static class User {
       double discount;
       String membershipType = "None";
       
       Order orderDetails = new Order();
       
       public User() {
           this.discount = 0;
           this.membershipType = "None";
           this.orderDetails = new Order();
       }
    }
    
    static class Administrator extends User {
        String membershipType = "Admin";
    }
    
    static class Customer extends User {
        String membershipType = "Default";
    }
    
    static class Order {
        
        ArrayList<Product> currentOrder = new ArrayList<Product>();
        
        double returnTotal(ArrayList<Object> produce) {
            double total = 0;
            for (Product item : this.currentOrder) {
                double price = item.GetPrice();
                total += price;
            }
            return total;
        }
        
        public Order() {
            this.currentOrder = new ArrayList<Product>();
        }
        
        public Order(ArrayList<Product> orderList) {
            this.currentOrder = orderList;
        }
        
        public void addToOrder(Product currentProduct, int quantity) {
            for (Product item : currentOrder) {
                if (item.GetName().contains(currentProduct.GetName())) {
                    item.addQuantity(quantity);
                }
                else {
                    this.currentOrder.add(currentProduct);
                    currentProduct.addQuantity(quantity);
                }
            }
        }
    }
    
    static class Product {
        double Price;
        int Quantity;
        String Name;
        
        public double GetPrice() {
            return Price*Quantity;
        }
        
        public String GetName() {
            return Name;
        }
        
        public Product() {
            this.Name = null;
            this.Quantity = 0;
        }
        
        public void addQuantity(int num) {
            if (this.Quantity + num <= 0) {
                this.Quantity = 0;
            }
            else {
                this.Quantity += num;
            }
        }
        
    }
    
    static class Electronic extends Product {
        double Price = 35;
        public Electronic(String newName, int newQuantity, double newPrice) {
            this.Name = newName;
            this.Quantity = newQuantity;
            this.Price = newPrice;
        }
    }
    
    static class Clothing extends Product {
        double Price = 25;
        public Clothing(String newName, int newQuantity, double newPrice) {
            this.Name = newName;
            this.Quantity = newQuantity;
            this.Price = newPrice;
        }
    }
    
    static class Grocery extends Product {
        double Price = 20;
        public Grocery(String newName, int newQuantity, double newPrice) {
            this.Name = newName;
            this.Quantity = newQuantity;
            this.Price = newPrice;
        }
    }
    
    public static void main(String[] args) {
        User currentUser = new Customer();
        
    }
}
